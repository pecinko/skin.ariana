<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">52</defaultcontrol>
  <controls>
    <include>DialogFullBG</include>
    <control type="group" description="BG and icons">
      <include>OpenClose</include>
      <control type="group" description="List 52">
        <visible>Control.IsVisible(52)</visible>
        <control type="label" id="2" description="Main Label">
          <include>CenterHeading</include>
          <label>$VAR[GlobalHeadings]</label>
        </control>
        <control type="list" id="52">
          <centerleft>50%</centerleft>
          <centertop>50%</centertop>
          <width>800</width>
          <height max="719">auto</height>
          <onup>52</onup>
          <ondown>52</ondown>
          <itemlayout width="800" height="120">
            <control type="image">
              <left>16</left>
              <top>6</top>
              <width>770</width>
              <height>108</height>
              <texture border="4">img/SettingsButtonNF.png</texture>
              <bordersize>0</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image" description="Thumb">
              <top>14</top>
              <left>28</left>
              <width>90</width>
              <height>90</height>
              <texture diffuse="img/UserDiffuse.png">$INFO[ListItem.Thumb]</texture>
              <aspectratio scalediffuse="false">scale</aspectratio>
            </control>
            <control type="label" description="Main Label">
              <left>140</left>
              <right>20</right>
              <top>0</top>
              <height>90</height>
              <font>size20B</font>
              <label>$INFO[ListItem.Label]</label>
            </control>
            <control type="label" description="INFO">
              <left>140</left>
              <right>20</right>
              <bottom>0</bottom>
              <height>66</height>
              <font>size16</font>
              <scroll>false</scroll>
              <label>$INFO[ListItem.Label2]</label>
            </control>
          </itemlayout>
          <focusedlayout width="800" height="120">
            <control type="group">
              <include>FocusButtonsAnimation</include>
              <control type="image">
                <left>16</left>
                <top>15</top>
                <width>760</width>
                <height>90</height>
                <texture border="10">focus/FrameFO.png</texture>
                <bordersize>-10</bordersize>
                <aspectratio>stretch</aspectratio>
              </control>
              <control type="image" description="Thumb">
                <top>14</top>
                <left>28</left>
                <width>90</width>
                <height>90</height>
                <texture diffuse="img/UserDiffuse.png" >$INFO[ListItem.Thumb]</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
              </control>
              <control type="label" description="Main Label">
                <left>140</left>
                <right>20</right>
                <top>0</top>
                <height>90</height>
                <font>size20B</font>
                <textcolor>LabelFO</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="INFO">
                <left>140</left>
                <right>20</right>
                <bottom>0</bottom>
                <height>66</height>
                <font>size16</font>
                <textcolor>LabelFO</textcolor>
                <label>$INFO[ListItem.Label2]</label>
              </control>
            </control>
          </focusedlayout>
        </control>
      </control>
    </control>
  </controls>
</window>
