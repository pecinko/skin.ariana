<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol allways="true">50</defaultcontrol>
  <include>OpenClose</include>
  <views>50</views>
  <controls>
    <include>FullBackground</include>
    <control type="label">
      <include>CenterHeading</include>
      <label>10503</label>
    </control>
    <control type="group">
      <description>Left panel</description>
      <left>45</left>
      <top>78</top>
      <control type="label">
        <left>15</left>
        <top>15</top>
        <width>615</width>
        <height>45</height>
        <font>size22</font>
        <label>31058</label>
      </control>
      <control type="list" id="50">
        <left>60</left>
        <top>93</top>
        <width>600</width>
        <height>828</height>
        <onleft>550</onleft>
        <onright>8999</onright>
        <onup>50</onup>
        <ondown>50</ondown>
        <pagecontrol>550</pagecontrol>
        <itemlayout height="60" width="600">
          <control type="label">
            <right>15</right>
            <top>0</top>
            <width>570</width>
            <font>size22</font>
            <height>60</height>
            <align>right</align>
            <scroll>false</scroll>
            <info>ListItem.Label</info>
          </control>
        </itemlayout>
        <focusedlayout height="60" width="600">
          <control type="group">
            <include>FocusButtonsAnimation</include>
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>5</left>
              <top>5</top>
              <width>590</width>
              <height>50</height>
              <texture border="10">focus/FrameFO.png</texture>
              <bordersize>-10</bordersize>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="label">
              <right>15</right>
              <top>0</top>
              <width>570</width>
              <font>size22</font>
              <height>60</height>
              <align>right</align>
              <info>ListItem.Label</info>
            </control>
          </control>
        </focusedlayout>
      </control>
    </control>
    <control type="group">
      <description>Middle Panel</description>
      <left>750</left>
      <top>68</top>
      <control type="group">
        <visible>Control.HasFocus(50)</visible>
