        <top>93</top>
        <width>630</width>
        <height>828</height>
        <onleft>8999</onleft>
        <onright>150</onright>
        <onup>100</onup>
        <ondown>100</ondown>
        <pagecontrol>150</pagecontrol>
        <itemlayout height="60" width="600">
          <control type="label">
            <left>15</left>
            <top>0</top>
            <width>570</width>
            <font>size22</font>
            <height>60</height>
            <scroll>false</scroll>
            <info>ListItem.Label</info>
          </control>
        </itemlayout>
        <focusedlayout height="60" width="600">
          <control type="group">
            <include>FocusButtonsAnimation</include>
            <control type="image">
              <animation effect="fade" time="100">VisibleChange</animation>
              <left>5</left>
              <top>5</top>
              <width>590</width>
              <height>50</height>
