<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">5</defaultcontrol>
  <controls>
    <control type="group">
      <include>OpenClose</include>
      <control type="image">
        <centerleft>50%</centerleft>
        <centertop>50%</centertop>
        <width>100%</width>
        <height>100%</height>
        <texture background="true">$VAR[Background.Overlay]</texture>
        <animation effect="fade" end="50" time="0" condition="true">Conditional</animation>
      </control>
      <control type="label" id="2" description="Settings">
        <visible>false</visible>
        <centerleft>50%</centerleft>
        <top>60</top>
        <width>1050</width>
        <font>size24B</font>
        <align>center</align>
      </control>
      <control type="grouplist" id="5" description="Control Area">
        <animation effect="fade" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>
        <centerleft>50%</centerleft>
        <centertop>50%</centertop>
        <width>840</width>
        <height max="960">auto</height>
        <aligny>center</aligny>
        <itemgap>2</itemgap>
        <orientation>vertical</orientation>
        <onup>5</onup>
        <ondown>5</ondown>
      </control>
      <control type="button" id="7">
        <description>Default Button</description>
        <align>left</align>
      </control>
      <control type="radiobutton" id="8">
        <description>Default RadioButton</description>
        <align>left</align>
      </control>
      <control type="spincontrolex" id="9">
        <description>Default spincontrolex</description>
        <reverse>yes</reverse>
      </control>
      <control type="sliderex" id="13">
        <description>Default Slider</description>
      </control>
    </control>
  </controls>
</window>
